#include<stdio.h>
void heapify(int a[],int n,int i){int l=2*i+1,r=2*i+2,max=i,t;
    if(l<n&&a[l]>a[max])max=l;if(r<n&&a[r]>a[max])max=r;
    if(max!=i){t=a[i];a[i]=a[max];a[max]=t;heapify(a,n,max);}}
int main(){int a[5]={5,3,4,1,2},n=5;
    for(int i=n/2-1;i>=0;i--)heapify(a,n,i);
    for(int i=n-1;i>0;i--){int t=a[0];a[0]=a[i];a[i]=t;heapify(a,i,0);}
    for(int i=0;i<n;i++)printf("%d ",a[i]);}

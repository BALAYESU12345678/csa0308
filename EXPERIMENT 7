#include <stdio.h>
int main() {
    int arr[100], n, pos, val, i;

    printf("Enter size: ");
    scanf("%d", &n);

    printf("Enter elements: ");
    for(i=0; i<n; i++)
        scanf("%d", &arr[i]);

    // Insert
    printf("Enter position & value to insert: ");
    scanf("%d%d", &pos, &val);
    for(i=n; i>=pos; i--)
        arr[i] = arr[i-1];
    arr[pos-1] = val;
    n++;

    // Delete
    printf("Enter position to delete: ");
    scanf("%d", &pos);
    for(i=pos-1; i<n-1; i++)
        arr[i] = arr[i+1];
    n--;

    // Display
    printf("Final Array: ");
    for(i=0; i<n; i++)
        printf("%d ", arr[i]);

    return 0;
}

#include<stdio.h>
int p[5];
int f(int i){return p[i]==i?i:(p[i]=f(p[i]));}
void u(int a,int b){p[f(a)]=f(b);}
int main(){
    int g[7][3]={{0,1,10},{0,2,6},{0,3,5},{1,3,15},{2,3,4},{1,2,25},{2,4,7}},i;
    for(i=0;i<5;i++)p[i]=i;
    for(i=0;i<7;i++)for(int j=i+1;j<7;j++)if(g[i][2]>g[j][2]){int t=g[i][2];g[i][2]=g[j][2];g[j][2]=t;}
    printf("Edges in MST:\n");
    for(i=0;i<7;i++)if(f(g[i][0])!=f(g[i][1])){printf("%d-%d=%d\n",g[i][0],g[i][1],g[i][2]);u(g[i][0],g[i][1]);}
}
